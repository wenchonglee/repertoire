datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Runs {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  runId     String        @unique
  startTime DateTime
  endTime   DateTime?
  allTests  TestSummary[]
  status    RunStatus?
}

enum RunStatus {
  passed
  failed
  timedout
  interrupted
}

type TestSummary {
  testId String
  title  String
}

model Tests {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  runId String

  // TestCase attributes
  testId         String
  title          String
  startTime      DateTime
  duration       Int?
  outcome        Outcome?
  titlePath      String[]
  annotations    Annotation[]
  location       Location
  retries        Int
  timeout        Int
  expectedStatus TestStatus

  // TestResult attributes
  errors String?

  // Supplementary attributes
  endTime DateTime?

  @@unique([runId, testId])
}

type Annotation {
  type        String
  description String?
}

type Location {
  column Int
  file   String
  line   Int
}

enum Outcome {
  skipped
  expected
  unexpected
  flaky
}

enum TestStatus {
  passed
  failed
  timedOut
  skipped
  interrupted
}
